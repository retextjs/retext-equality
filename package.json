{
  "name": "retext-equality",
  "version": "7.0.0",
  "description": "retext plugin to warn about possible insensitive, inconsiderate language",
  "license": "MIT",
  "keywords": [
    "english",
    "equal",
    "gender",
    "identity",
    "insensitive",
    "language",
    "neutral",
    "orientation",
    "plugin",
    "race",
    "religion",
    "retext",
    "retext-plugin",
    "sensitive",
    "sex",
    "unified",
    "writing"
  ],
  "repository": "retextjs/retext-equality",
  "bugs": "https://github.com/retextjs/retext-equality/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Shinnosuke Watanabe <snnskwtnb@gmail.com>",
    "Elliott Hauser <eah13@mac.com>",
    "Ryan Tucker <git@ryantucker.us>",
    "David Simons <david.simons@softwire.com>",
    "rugk <rugk@posteo.de>",
    "Eli Feasley <eliana@khanacademy.org>",
    "Eli Sadoff <esadoff@ardiangroup.com>",
    "Flip Stewart <flipstewart@me.com>",
    "Catherine Etter <cetter.catherine@gmail.com>",
    "Conlin Durbin <conlindurbin@protonmail.com>",
    "Jen Weber <j@jenweber.me>",
    "Matsuko <info@matsuko.ca>",
    "Saksham Gupta <saksham.gupta2016@vitstudent.ac.in>",
    "Aaron Miller <me@aaron-miller.me>",
    "Alicia Gansley <aegansley@gmail.com>",
    "Anna K <anna.k.kautto@gmail.com>",
    "Bryce Kahle <bryce@brycekahle.com>",
    "Ben Hall <github@benhall.io>"
  ],
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./en": "./lib/en.js",
    ".": "./lib/en.js"
  },
  "files": [
    "lib/"
  ],
  "dependencies": {
    "@types/nlcst": "^2.0.0",
    "devlop": "^1.0.0",
    "nlcst-normalize": "^4.0.0",
    "nlcst-search": "^4.0.0",
    "nlcst-to-string": "^4.0.0",
    "quotation": "^2.0.0",
    "unist-util-position": "^5.0.0",
    "unist-util-visit": "^5.0.0",
    "vfile": "^6.0.0"
  },
  "devDependencies": {
    "@types/mdast": "^4.0.0",
    "@types/node": "^20.0.0",
    "c8": "^8.0.0",
    "is-hidden": "^2.0.0",
    "mdast-util-heading-range": "^4.0.0",
    "prettier": "^3.0.0",
    "remark-cli": "^11.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "retext": "^9.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^5.0.0",
    "vfile-sort": "^4.0.0",
    "xo": "^0.56.0",
    "yaml": "^2.0.0"
  },
  "scripts": {
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "format": "remark . --frail --output --quiet && prettier . --log-level warn --write && xo --fix",
    "generate": "node --conditions development script/generate.js",
    "prepack": "npm run generate && npm run build && npm run format",
    "test": "npm run generate && npm run build && npm run format && npm run test-coverage",
    "test-api": "node --conditions development test.js",
    "test-coverage": "c8 --100 --check-coverage --reporter lcov npm run test-api"
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-wooorm",
      [
        "remark-gfm",
        {
          "tablePipeAlign": false
        }
      ],
      [
        "remark-lint-table-pipe-alignment",
        false
      ],
      "./script/build-table.js"
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "ignoreCatch": true,
    "strict": true
  },
  "xo": {
    "overrides": [
      {
        "files": [
          "script/**/*.js"
        ],
        "rules": {
          "no-await-in-loop": "off"
        }
      }
    ],
    "prettier": true,
    "rules": {
      "unicorn/prefer-at": "off",
      "unicorn/prefer-string-replace-all": "off"
    }
  }
}
